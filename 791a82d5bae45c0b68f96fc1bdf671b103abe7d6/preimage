        # optionally execute ARG1 skips ($rbs)
        # if it happens in the new branch, resolve it manually
        if [ x$rbs != x ]; then
            echo git rebase --skip $rbs x
            for i in `seq 1 $rbs`; do
                git rebase --skip
            done
        fi
    fi
    if [ -e .git/rebase-apply/patch ]; then
       exit
    fi
    git checkout branch-point
